{
	"name" : "elasticms/common-bundle",
	"description" : "All code shared between the EMS client helper and the EMS core",
	"type" : "symfony-bundle",
	"keywords" : [
		"elasticms"
	],
	"license" : "MIT",
	"authors" : [{
			"name" : "David Mattei",
			"email" : "david.mattei@smals.be"
		},
		{
			"name" : "David Meert",
			"email" : "david.meert@smals.be"
		}
	],
	"require" : {
		"php" : "^7.2.0",
		"ext-gd": "*",
		"ext-iconv": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"aws/aws-sdk-php": "^3.87",
		"elasticsearch/elasticsearch" : "^5.3",
		"guzzlehttp/guzzle" : "^6.3",
		"twig/twig" : "^2.4",
		"symfony/routing": "^4.1",
		"symfony/http-foundation": "^4.1",
		"symfony/monolog-bundle": "^3.1",
		"symfony/security": "^4.1",
		"symfony/translation": "^4.1",
		"doctrine/orm": "^2.6",
		"symfony/framework-bundle": "^4.1",
		"symfony/stopwatch": "^4.1",
		"symfony/options-resolver": "^4.1",
		"doctrine/doctrine-bundle": "^1.9"
	},
	"require-dev" : {
		"phpunit/phpunit" : "^5.7",
		"mockery/mockery" : "^0.9.9",
		"symfony/phpunit-bridge": "^4.1",
		"squizlabs/php_codesniffer": "3.*",
		"phpstan/phpstan": "^0.11.4"
	},
	"autoload" : {
		"psr-4" : {
			"EMS\\CommonBundle\\" : ""
		},
		"exclude-from-classmap" : [
			"tests/"
		]
	},
	"autoload-dev" : {
		"psr-4" : {
			"EMS\\CommonBundle\\Tests\\" : "tests/"
		}
	},
	"extra" : {
		"branch-alias" : {
			"dev-master" : "0.1-dev"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=phpcs.xml.dist --extensions=php,lib,inc",
		"phpcbf": "phpcbf --standard=phpcs.xml.dist --extensions=php,lib,inc",
		"phpstan": "phpstan analyse ."
	}
}
