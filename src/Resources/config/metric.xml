<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" autoconfigure="false" autowire="false" />

<!--        <service id="ems.metric.prometheus_storage_adapter" class="Prometheus\Storage\Adapter" abstract="true" />-->
<!--        <service id="ems.metric.prometheus_collector_registry" class="Prometheus\CollectorRegistry">-->
<!--            <argument type="service" id="ems.metric.prometheus_storage_adapter" />-->
<!--        </service>-->




        <service id="ems.metric.collector_registry_factory" class="EMS\CommonBundle\Common\Metric\CollectorRegistryFactory">
            <argument type="service" id="ems_common.redis"/>
            <argument type="string">%ems_common.redis.prefix%</argument>
        </service>

        <service id="ems.metric.metric_collector" class="EMS\CommonBundle\Common\Metric\MetricCollector">
            <argument type="service" id="ems.metric.collector_registry_factory"/>
            <argument type="service" id="Psr\Cache\CacheItemPoolInterface"/>
            <argument>%ems.metric.type%</argument>
            <argument type="tagged_iterator" tag="ems.metric_collector" />
        </service>

        <service id="ems_common.common_metric.metric_event_listener" class="EMS\CommonBundle\Common\Metric\MetricEventListener">
            <argument type="service" id="ems.metric.metric_collector"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="ems.command.metric_collect" class="EMS\CommonBundle\Command\MetricCollectCommand">
            <argument type="service" id="ems.metric.metric_collector"/>
            <tag name="console.command" command="ems:metric:collect"/>
        </service>
        <service id="ems.controller.metric" class="EMS\CommonBundle\Controller\MetricController">
            <argument type="service" id="ems.metric.metric_collector" />
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
